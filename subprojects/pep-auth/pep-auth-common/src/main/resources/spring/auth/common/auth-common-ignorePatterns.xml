<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ANT path pattern, start with HTTP method, such as: GET:/**/bar, *:/foo/** -->
    <bean id="ignorePatternsList" class="com.proper.enterprise.platform.core.factory.ComposeListFactoryBean"
          depends-on="PEPApplicationContext">
        <constructor-arg name="listBeanNamePattern" value="ignorePatternsList.+"/>
    </bean>

</beans>
