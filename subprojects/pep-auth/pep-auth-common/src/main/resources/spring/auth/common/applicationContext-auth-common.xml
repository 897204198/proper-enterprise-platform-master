<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <aop:config>
        <aop:aspect id="historicalAspect" ref="historicalAdvice">
            <aop:pointcut id="savePointcut" expression="execution(public * org.springframework.data.repository.Repository+.save*(..))"/>
            <aop:before method="beforeSave" pointcut-ref="savePointcut"/>
        </aop:aspect>
    </aop:config>

    <bean id="historicalAdvice" class="com.proper.enterprise.platform.auth.common.aspect.HistoricalAdvice"/>

    <beans>
        <context:property-placeholder ignore-unresolvable="true"
                                      location="classpath:conf/auth/common/auth-common.properties"/>
    </beans>

</beans>
