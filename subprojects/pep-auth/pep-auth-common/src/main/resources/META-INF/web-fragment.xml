                                  http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              version="3.0" metadata-complete="true">
    <name>allowCrossOrigin</name>
    <filter>
        <filter-name>allowCrossOriginFilter</filter-name>
        <filter-class>com.proper.enterprise.platform.auth.common.filter.AllowCrossOriginFilter</filter-class>
