<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="wanghp" id="2018072001-pep-notice">
        <createTable tableName="PEP_NOTICE">
            <column name="ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValue="2017-02-20 00:00:00" name="CREATE_TIME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValue="PEP" name="CREATE_USER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValue="Y" name="ENABLE" type="CHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column defaultValue="2017-02-20 00:00:00" name="LAST_MODIFY_TIME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValue="PEP" name="LAST_MODIFY_USER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="BUSINESS_ID" type="VARCHAR(32)">
                <constraints nullable="true"/>
            </column>
            <column name="BUSINESS_NAME" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="TITLE" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="CONTENT" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="TO_USER_ID" type="VARCHAR(32)">
                <constraints nullable="true"/>
            </column>
            <column defaultValue="N" name="IS_READED" type="CHAR(1)">
                <constraints nullable="true"/>
            </column>
            <column defaultValue="N" name="IS_PUSH" type="CHAR(1)">
                <constraints nullable="true"/>
            </column>
            <column defaultValue="N" name="IS_EMAIL" type="CHAR(1)">
                <constraints nullable="true"/>
            </column>
            <column defaultValue="N" name="IS_SMS" type="CHAR(1)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="wanghp" id="2018072002-pep-notice">
        <addPrimaryKey columnNames="ID" constraintName="UK_PEP_NOTICE" tableName="PEP_NOTICE"/>
    </changeSet>
</databaseChangeLog>
