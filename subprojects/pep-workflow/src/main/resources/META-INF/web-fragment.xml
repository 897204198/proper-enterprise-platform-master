<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                                  http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              version="3.0" metadata-complete="true">

    <!-- Registering Spring MVC Servlet for Activiti app -->
    <servlet>
        <servlet-name>wfAppDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>
                org.springframework.web.context.support.AnnotationConfigWebApplicationContext
            </param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>org.activiti.app.servlet.AppDispatcherServletConfiguration</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>wfAppDispatcher</servlet-name>
        <url-pattern>/workflow/service/app/*</url-pattern>
    </servlet-mapping>

    <!-- Registering Activiti public REST API -->
    <servlet>
        <servlet-name>wfApiDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>
                org.springframework.web.context.support.AnnotationConfigWebApplicationContext
            </param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>org.activiti.app.servlet.ApiDispatcherServletConfiguration</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>wfApiDispatcher</servlet-name>
        <url-pattern>/workflow/service/api/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>gzipFilter</filter-name>
        <filter-class>com.proper.enterprise.platform.core.utils.gzip.filter.GZipFilter</filter-class>
        <!--comma-separated list of regular expression patterns to control the paths that are excluded from compression-->
        <init-param>
            <param-name>excludePathPatterns</param-name>
            <param-value>.*/workflow.*</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-fragment>
