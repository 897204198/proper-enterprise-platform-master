<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <import resource="classpath*:spring/workflow/workflow-*.xml" />

    <context:component-scan base-package="org.activiti.app.conf, org.activiti.app.repository, org.activiti.app.service, org.activiti.app.model.component" />

    <mvc:annotation-driven content-negotiation-manager="contentNegotiationManager"/>

    <bean id="contentNegotiationManager" class="org.springframework.web.accept.ContentNegotiationManagerFactoryBean">
        <property name="mediaTypes">
            <value>
                json=application/json
                xml=application/xml
            </value>
        </property>
    </bean>

    <mvc:resources mapping="/workflow/*.html"     location="classpath:/META-INF/resources/"/>
    <mvc:resources mapping="/workflow/editor/**"  location="classpath:/META-INF/resources/editor/"/>
    <mvc:resources mapping="/workflow/fonts/**"   location="classpath:/META-INF/resources/fonts/"/>
    <mvc:resources mapping="/workflow/i18n/**"    location="classpath:/META-INF/resources/i18n/"/>
    <mvc:resources mapping="/workflow/libs/**"    location="classpath:/META-INF/resources/libs/"/>
    <mvc:resources mapping="/workflow/scripts/**" location="classpath:/META-INF/resources/scripts/"/>
    <mvc:resources mapping="/workflow/styles/**"  location="classpath:/META-INF/resources/styles/"/>
    <mvc:resources mapping="/workflow/views/**"   location="classpath:/META-INF/resources/views/"/>

</beans>
