<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                                  http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              version="3.0" metadata-complete="true">

    <filter>
        <filter-name>gzipFilter</filter-name>
        <filter-class>com.proper.enterprise.platform.core.utils.gzip.filter.GZipFilter</filter-class>

        <!--comma-separated list of MIME types which should be compressed-->
        <!--<init-param>-->
            <!--<param-name>mimeTypes</param-name>-->
            <!--<param-value>-->
                <!--text/html,text/xml,text/plain,text/css,text/javascript,text/json,application/x-javascript,application/javascript,application/json-->
            <!--</param-value>-->
        <!--</init-param>-->

        <!--comma-separated list of regular expression patterns to control the paths that are excluded from compression-->
        <!--<init-param>-->
            <!--<param-name>excludePathPatterns</param-name>-->
            <!--<param-value>.*/workflow.*</param-value>-->
        <!--</init-param>-->

        <!--size of the output buffer in bytes-->
        <!--<init-param>-->
            <!--<param-name>bufferSize</param-name>-->
            <!--<param-value>8192</param-value>-->
        <!--</init-param>-->

        <!--minimum content length required for compression to occur-->
        <!--<init-param>-->
            <!--<param-name>minGzipSize</param-name>-->
            <!--<param-value>256</param-value>-->
        <!--</init-param>-->

        <!--comma-separated list of user agents to exclude from compression-->
        <!--<init-param>-->
            <!--<param-name>excludedAgents</param-name>-->
            <!--<param-value>MSIE 6.0</param-value>-->
        <!--</init-param>-->

        <!--comma-separated list of regular expression patterns to control user agents excluded from compression-->
        <!--<init-param>-->
            <!--<param-name>excludeAgentPatterns</param-name>-->
            <!--<param-value>MSIE</param-value>-->
        <!--</init-param>-->

        <!--the level used for deflate compression (0-9)-->
        <!--<init-param>-->
            <!--<param-name>deflateCompressionLevel</param-name>-->
            <!--<param-value>0</param-value>-->
        <!--</init-param>-->

        <!--noWrap setting for deflate compression (true or false)-->
        <!--<init-param>-->
            <!--<param-name>deflateNoWrap</param-name>-->
            <!--<param-value>true</param-value>-->
        <!--</init-param>-->

        <!--Vary header to be sent on responses that may be compressed-->
        <!--<init-param>-->
            <!--<param-name>vary</param-name>-->
            <!--<param-value>Accept-Encoding, User-Agent</param-value>-->
        <!--</init-param>-->

        <!--comma-separated list of HTTP methods for which compression is enabled-->
        <!--<init-param>-->
            <!--<param-name>methods</param-name>-->
            <!--<param-value>method1</param-value>-->
        <!--</init-param>-->

        <!--comma-separated list of paths to exclude from compression-->
        <!--<init-param>-->
            <!--<param-name>excludePaths</param-name>-->
            <!--<param-value>method1</param-value>-->
        <!--</init-param>-->
    </filter>

    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-fragment>
