<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd" default-lazy-init="true">


    <context:property-placeholder location="classpath:conf/pay/ali/pay-ali.properties" ignore-unresolvable="true"/>

    <bean id="aliRSAPay" class="com.proper.enterprise.platform.core.utils.cipher.RSA">
        <constructor-arg name="signAlgorithm" value="${pay.ali.signAlgoForPay}"/>
    </bean>

    <bean id="aliRSARefund" class="com.proper.enterprise.platform.core.utils.cipher.RSA">
        <constructor-arg name="signAlgorithm" value="${pay.ali.signAlgoForRefund}"/>
    </bean>
</beans>
