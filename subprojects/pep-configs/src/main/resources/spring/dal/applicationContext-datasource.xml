<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="dataSourceClassName" value="${database.driverClassName}" />
        <property name="maximumPoolSize" value="${database.maxPoolSize}" />
        <property name="autoCommit" value="${database.autoCommit}" />
        <property name="maxLifetime" value="${database.maxLifetime}" />
        <property name="leakDetectionThreshold" value="${database.leakDetectionThreshold}" />
        <property name="dataSourceProperties">
            <value>
                url      = ${database.url}
                user     = ${database.username}
                password = ${database.password}
            </value>
        </property>
    </bean>

    <bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg ref="hikariConfig" />
    </bean>

</beans>
